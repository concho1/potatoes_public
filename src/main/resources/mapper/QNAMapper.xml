<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.goott.potatoes.qna.model.QNAMapper">

    <select id="getListCount" resultType="int">
        select count(*) from goott.qna
    </select>

    <select id="getList" parameterType="QNAPage" resultType="QNA">
         select * from goott.qna order by qna_group desc, qna_step
    </select>

    <select id="getFAQ" resultType="FAQ">
        select * from goott.faq
    </select>

    <insert id="insertQuestion" parameterType="QNA">
        <selectKey resultType="int" keyProperty="num" order="BEFORE">
            select coalesce(max(num), 0) + 1 from goott.qna
        </selectKey>
            insert into goott.qna values(#{num}, #{userNickname}, #{title}, #{cont}, now(), default, default, #{num}, 0, 0);
    </insert>

    <select id="getQNA" parameterType="int" resultType="QNA">
        select * from goott.qna where num = #{no}
    </select>

    <select id="getAnswer" parameterType="int" resultType="QNA">
        select * from goott.qna where qna_group = #{no} and qna_status = 2
    </select>

    <update id="updateQNA" parameterType="QNA">
        update goott.qna set title = #{title}, cont = #{cont}, qna_update = now() where num = #{num}
    </update>

    <delete id="deleteQNA" parameterType="int">
        delete from goott.qna where num = #{no}
    </delete>

    <delete id="deleteAnswer" parameterType="int">
        delete from goott.qna where qna_group = #{no}
    </delete>

</mapper>